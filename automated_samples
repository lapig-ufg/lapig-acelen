//Parametros
var type = 'cultivated'
var ano = '2001'
var area = data.datasets['test_data'].filter(ee.Filter.eq('Fazenda','ADRIANA'))
var imgs = data.datasets[type+"_perc"].toBands()
var numberSamples = 500
var scale = 30



//Calculation samples        
var target = func.automatedSamples(imgs,area,type,ano,numberSamples,scale)
print(target)




